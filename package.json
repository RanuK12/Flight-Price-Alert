{
  "name": "flight-deal-finder",
  "version": "3.0.0",
  "description": "Buscador de ofertas de vuelos Europa→Argentina/USA con alertas Telegram y monitoreo automático",
  "main": "server/app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server/app.js",
    "bot": "node bot.js",
    "server": "node server/app.js",
    "dev": "node server/app.js",
    "test": "jest --detectOpenHandles",
    "test:scraper": "jest server/scrapers --testTimeout=30000",
    "test:api": "jest server/routes --testTimeout=10000",
    "test:db": "jest server/database --testTimeout=10000"
  },
  "keywords": [
    "flights",
    "deals",
    "price-tracking",
    "telegram",
    "google-flights",
    "argentina",
    "usa"
  ],
